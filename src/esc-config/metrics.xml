<metrics xmlns:ns2="urn:ietf:params:xml:ns:netconf:base:1.0">
    <metric>
        <name>FTD_API_PING</name>
        <type>MONITOR_SUCCESS_FAILURE</type>
        <userLabel>Check FTD REST API Available</userLabel>
        <metaData>
            <type>custom_script</type>
            <properties>
                <property>
                    <hidden>false</hidden>
                    <name>vm_ip_address</name>
                    <value></value>
                </property>
                <property>
                    <hidden>false</hidden>
                    <name>script_filename</name>
                    <value>/opt/cisco/esc/esc-scripts/ftdapicheck.py</value>
                </property>
            </properties>
        </metaData>
    </metric>
    <metric>
        <name>FTD_LOAD</name>
        <type>MONITOR_THRESHOLD</type>
        <userLabel>Check FTD LOAD</userLabel>
        <metaData>
            <type>custom_script_threshold</type>
            <properties>
                <property>
                    <hidden>false</hidden>
                    <name>vm_ip_address</name>
                    <value></value>
                </property>
                <property>
                    <hidden>false</hidden>
                    <name>script_filename</name>
                    <value>/opt/cisco/esc/esc-scripts/ftdload.py</value>
                </property>
            </properties>
        </metaData>
    </metric>
</metrics>